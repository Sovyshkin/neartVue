{
  "kind": "collectionType",
  "collectionName": "artworks",
  "info": {
    "singularName": "artwork",
    "pluralName": "artworks",
    "displayName": "Картина",
    "description": "Модель картины с дополнительной информацией"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "price": {
      "type": "decimal"
    },
    "size": {
      "type": "string"
    },
    "status_art": {
      "type": "enumeration",
      "enum": [
        "В наличии",
        "Нет в наличии",
        "Доступно под заказ"
      ]
    },
    "unique_value": {
      "type": "boolean"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "artist": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "kartinas"
    },
    "aboutArtwork": {
      "type": "text",
      "maxLength": 1000,
      "configurable": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "technique": {
      "type": "text",
      "maxLength": 1000,
      "configurable": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "storageConditions": {
      "type": "text",
      "maxLength": 1000,
      "configurable": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "deliveryInfo": {
      "type": "text",
      "maxLength": 1000,
      "configurable": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "showOnHomepage": {
      "type": "boolean",
      "default": false,
      "configurable": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    }
  }
}
